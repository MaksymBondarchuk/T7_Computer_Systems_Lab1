<Window x:Class="T7_Computer_Systems_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T7_Computer_Systems_Lab1"
        mc:Ignorable="d"
        Title="Lab1 design by the TEAM" Height="380" Width="960" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="#FF130E32" BorderBrush="Black">
    <Grid Height="371" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="gbMx1" Header="I Matrix" HorizontalAlignment="Left" Height="66" Margin="823,10,0,0" VerticalAlignment="Top" Width="111" FontSize="18.667" Foreground="White"/>
        <GroupBox x:Name="gbType" Header="Type:" HorizontalAlignment="Left" Height="56" Margin="496,101,0,0" VerticalAlignment="Top" Width="212" FontSize="18.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" BorderBrush="White"/>
        <GroupBox x:Name="gbMx2" Header="II Matrix" Height="66" Margin="823,91,0,0" VerticalAlignment="Top" FontSize="18.667" HorizontalAlignment="Left" Width="111" Foreground="White" Visibility="Hidden"/>
        <TextBox x:Name="tbMx1" HorizontalAlignment="Left" Margin="10,0,0,204" TextWrapping="Wrap" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Background="#FF160D51" BorderBrush="#FFB49C9C" IsReadOnly="True" FontFamily="Consolas" Width="438" Height="157" MouseDoubleClick="tbMxGenerate_MouseDoubleClick" Cursor="Arrow" Foreground="White"/>
        <Button x:Name="bTsp" Content="T" Margin="496,53,0,0" FontSize="26.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Width="38" Background="{x:Null}" Foreground="White" Click="bTsp_Click"/>
        <Label x:Name="lCollMx1" Content="5" HorizontalAlignment="Left" Margin="842,34,0,0" VerticalAlignment="Top" FontSize="24" MouseLeftButtonDown="lColl_MouseLeftButtonDown" MouseRightButtonDown="lColl_MouseRightButtonDown" Foreground="White"/>
        <Label x:Name="lSignOfMultMx1" Content="X" HorizontalAlignment="Left" Margin="865,34,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Segoe UI Black" RenderTransformOrigin="0.304,0.6" Foreground="White"/>
        <Label x:Name="lRowMx1" Content="3" HorizontalAlignment="Left" Margin="892,34,0,0" VerticalAlignment="Top" FontSize="24" MouseLeftButtonDown="lRow_MouseLeftButtonDown" MouseRightButtonDown="lRow_MouseRightButtonDown" Foreground="White"/>
        <Label x:Name="lNumberOfProc" Content="5" HorizontalAlignment="Left" Margin="569,4,0,0" VerticalAlignment="Top" FontSize="26.667" MouseLeftButtonDown="lNumberOfProc_MouseLeftButtonDown" MouseRightButtonDown="lNumberOfProc_MouseRightButtonDown" Foreground="White"/>
        <TextBox x:Name="tbMx2" Margin="10,0,0,42" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" Background="#FF160D51" BorderBrush="#FFB49C9C" IsReadOnly="True" FontFamily="Consolas" Cursor="Arrow" Height="157" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="438" Foreground="White" MouseDoubleClick="tbMx2_MouseDoubleClick" Visibility="Hidden"/>
        <Button x:Name="bAdd" Content="+" HorizontalAlignment="Left" Margin="539,53,0,278" FontSize="26.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Width="38" Foreground="White" Click="bAdd_Click"/>
        <Button x:Name="bMlt" Content="*" HorizontalAlignment="Left" Margin="582,60,0,271" FontSize="26.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Width="38" Foreground="White" Click="bMlt_Click"/>
        <TextBox x:Name="tbMxRes" Margin="496,0,0,42" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" Background="#FF160D51" BorderBrush="#FFB49C9C" IsReadOnly="True" FontFamily="Consolas" Cursor="Arrow" Height="157" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="438" Foreground="White"/>
        <Label x:Name="lCollMx2" Content="3" HorizontalAlignment="Left" Margin="842,115,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White" Visibility="Hidden"/>
        <Label x:Name="lSignOfMultMx2" Content="X" HorizontalAlignment="Left" Margin="865,115,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Segoe UI Black" RenderTransformOrigin="0.304,0.6" Foreground="White" Visibility="Hidden"/>
        <Label x:Name="lRowMx2" Content="3" HorizontalAlignment="Left" Margin="892,115,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White" MouseLeftButtonDown="lRowMx2_MouseLeftButtonDown" MouseRightButtonDown="lRowMx2_MouseRightButtonDown" Visibility="Hidden"/>
        <Label x:Name="lTextUnit" Content="Unit's:" HorizontalAlignment="Left" Margin="496,10,0,0" VerticalAlignment="Top" FontSize="21.333" Foreground="White"/>
        <RadioButton x:Name="rbM1" Content="Method_1" HorizontalAlignment="Left" Margin="505,127,0,0" VerticalAlignment="Top" FontSize="18.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" Foreground="White"/>
        <RadioButton x:Name="rbM2" Content="Method_1" HorizontalAlignment="Left" Margin="604,127,0,0" VerticalAlignment="Top" FontSize="18.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
        <Button x:Name="bCount" Content="Count" HorizontalAlignment="Left" Margin="634,53,0,278" FontSize="26.667" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="White" Width="135" Foreground="White"/>
        <Label x:Name="lType" Content="Transposition" HorizontalAlignment="Left" Margin="634,10,0,0" VerticalAlignment="Top" FontSize="21.333" Foreground="White"/>

    </Grid>
</Window>

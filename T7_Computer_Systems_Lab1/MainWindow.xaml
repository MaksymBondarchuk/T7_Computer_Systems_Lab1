<Window x:Class="T7_Computer_Systems_Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T7_Computer_Systems_Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340*"/>
            <ColumnDefinition Width="177*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bBegin" Content="Begin" HorizontalAlignment="Left" Height="30" Margin="215,160,0,0" VerticalAlignment="Top" Width="85" Click="button_Click"/>
        <RadioButton x:Name="rbDivided" Content="Divided" HorizontalAlignment="Left" Margin="40,120,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="rbCommon" Content="Common" HorizontalAlignment="Left" Margin="40,140,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
